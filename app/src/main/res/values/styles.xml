<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="myTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">@color/bg_login</item>
        <item name="android:numbersSelectorColor">#88000000</item>
        <item name="android:headerBackground">@drawable/mybackgroundlogin</item>
    </style>
    <style name="myDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">@color/bg_login</item>
        <item name="android:numbersSelectorColor">#88000000</item>
        <item name="android:headerBackground">@drawable/mybackgroundlogin</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/green</item>
    </style>


</resources>
